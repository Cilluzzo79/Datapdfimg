# Environment
ENVIRONMENT=dev

# API Keys
OPENROUTER_API_KEY=your_openrouter_api_key
MISTRAL_API_KEY=your_mistral_api_key

# Configurazione app
MAX_FILE_SIZE_MB=10
LOG_LEVEL=INFO
TEMP_FOLDER=/tmp/railway-document-worker

# Feature flags
ENABLE_TABULAR_PROCESSING=true
ENABLE_PDF_PROCESSING=true
ENABLE_ADVANCED_PDF=false
ENABLE_OCR=true
ENABLE_IMAGE_PROCESSING=true
ENABLE_MISTRAL_VISION=true

# Claude integration
ENABLE_CLAUDE_FORMAT=true
CLAUDE_INCLUDE_RAW_TEXT=true
CLAUDE_MAX_RAW_TEXT_LENGTH=8000

# LLM configuration
LLM_MODEL=anthropic/claude-3-opus:beta
LLM_TIMEOUT=60

# OCR configuration
OCR_LANGUAGE=ita+eng
